<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

	<!-- 외부 ~.properties 파일의 위치 설정 -->
	<properties resource="config/dbInfo.properties"/>
	
	<settings>
		<!-- #{이름}을 했을때 값이 없으면 오류난다. 그래서 값이 없을때 NULL이라는 값으로
			 들어갈 수 있도록 설정이 필요하다.
			 value의 값 NULL은 모두 대문자로 작성 -->
		<setting name="jdbcTypeForNull" value="NULL"/>
		
		<!-- 자바의 camel표기법과 db의 underscore를 매핑해주는 설정 -->
		<setting name="mapUnderscoreToCamelCase" value="true"/>
		
	</settings>
	
	
	<!-- 객체 별칭만들기 -->
	<typeAliases>
		<typeAlias type="kosta.dto.CommentbDTO" alias="commentbDTO"/>
		<typeAlias type="kosta.dto.ReplyDTO" alias="replyDTO"/>
		<typeAlias type="kosta.dto.UserDTO" alias="userDTO"/>
	</typeAliases>
	
	
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="UNPOOLED"> <!-- UNPOOLED , POOLED -->
				<property name="driver" value="${driverName}" />
				<property name="url" value="${url}" />
				<property name="username" value="${userName}" />
				<property name="password" value="${userPass}" />
			</dataSource>
		</environment>
	</environments>

	<mappers>
		<mapper resource="config/JoinMapper.xml" />
	</mappers>
	
</configuration>